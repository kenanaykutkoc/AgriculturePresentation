@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                            <th>Durum</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementId</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/EditAnnouncement/@item.AnnouncementId" class="btn btn-outline-info">Güncelle</a></td>                                   
                               
                                
                                    @if (item.Status == true)
                                    {
                                        <td><a href="/Announcement/ChangeStatusToFalse/@item.AnnouncementId" class="btn btn-outline-secondary">Pasif Yap</a></td>
                                    }
                                    else                                 
                                    {
                                        <td><a href="/Announcement/ChangeStatusToTrue/@item.AnnouncementId" class="btn btn-outline-success">Aktif Yap</a></td>
                                    }

                                
                               

                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>
            </div>
        </div>
    </div>
</div>

