
@{
	ViewData["Title"] = "Index";
	Layout = null;
}
	



<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadPartial")

<body>
		

	<!-- header -->
	<div class="header">
		<div class="container">
			@await Component.InvokeAsync("_TopAddressPartial")		
			
			@await Component.InvokeAsync("_SocialMediaPartial")
			<div class="clearfix"> </div>
			
		</div>
	</div>

	@await Component.InvokeAsync("_NavbarPartial")

	<div class="modal fade" id="myModal1" tabindex="-1" role="dialog">
		<!-- Modal1 -->
		<div class="modal-dialog">
			<!-- Modal content-->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h4>In Harvest</h4>
					<img src="~/web/images/banner1.jpg" alt=" " class="img-responsive">
					<h5>ÇEVRE & SÜRDÜREBİLİRLİK</h5>
					<p>Birbirinden değerli ve yetenekli ekip arkadaşlarımızla beraber sizler için kendi tarla ve bahçelerimizde tamamen organik ve doğal ürünler yetiştiriyoruz.Dilediğiniz zaman Antalya,İzmir,Muğla ve Aydın şehirlerinde bulunan bahçelerimizi ziyaret edip çayımızı içebilirsiniz.Hem yurt içi hemde yurt dışı istediğiniz yere ürün gönderimi yapmaktayız.</p>
				</div>
			</div>
		</div>
	</div>

	@await Component.InvokeAsync("_AboutPartial")

	
	@await Component.InvokeAsync("_ServicePartial")

	
	@await Component.InvokeAsync("_TeamPartial")

	
	@await Component.InvokeAsync("_AnnouncementPartial")

	@await Component.InvokeAsync("_GalleryPartial")


	
	<div class="contact-agile" id="contact">
		<div class="container">

			@await Component.InvokeAsync("_AddressPartial")			

			@await Html.PartialAsync("/Views/Default/SendMessage.cshtml")
			
			
		</div>
	</div>
	@await Component.InvokeAsync("_MapPartial")



	<div class="copy">
		<p>© @DateTime.Now.Year Hasat Zamanı. Tüm hakları saklıdır | Design by <a href="http://w3layouts.com/">W3layouts</a> </p>
	</div>

	@await Html.PartialAsync("/Views/Default/ScriptPartial.cshtml")
</body>
</html>