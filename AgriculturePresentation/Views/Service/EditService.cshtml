@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Hizmet Güncelleme Sayfası</h1>

@Html.HiddenFor(x=> x.ServiceId)

<form method="post">
    <div class="form-group">
        @Html.Label("Başlık")
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Görsel Yolu")
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
    @Html.Label("Açıklama")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <button class="btn btn-outline-info">Değişiklikleri Kaydet</button>
</form>