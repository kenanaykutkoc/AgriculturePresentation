@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Listesi</h4>
            <p class="card-description">                
            </p>
            <div class="table-responsive">
                @if (Model.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Id</th>
                                <th>İsim</th>
                                <th>Görev</th>
                                <th>Sil</th>
                                <th>Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td>@item.TeamId</td>
                                    <td>@item.PersonName</td>
                                    <td>@item.Title</td>
                                    <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/Team/EditTeam/@item.TeamId" class="btn btn-outline-info">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                else
                {
                    <div class="alert alert-danger">
                        <strong>UYARI!</strong> Veri tabanınızda takım üyesi bulunamamıştır.                      
                        </div>
                    <div class="alert alert-light">
                        <strong>UYARI!</strong> Lütfen yeni takım üyesi giriniz.
                    </div>
                }
             
            </div>
            <br />
            <a href="/Team/AddTeam" class="btn btn-outline-info">Yeni Takım Üyesi</a>
        </div>
    </div>
</div>

